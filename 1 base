  <script>
    // ====== year
    document.getElementById('year').textContent = new Date().getFullYear();

    // ====== HERO CAROUSEL logic (3 slides)
    (function(){
      const slides = document.getElementById('slides');
      const dots = document.getElementById('carouselDots');
      const total = slides.children.length;
      let index = 0;
      // create dots
      for(let i=0;i<total;i++){
        const d = document.createElement('button');
        d.className = 'dot' + (i===0 ? ' active' : '');
        d.setAttribute('aria-label', 'Ir para slide ' + (i+1));
        d.addEventListener('click', ()=> show(i));
        dots.appendChild(d);
      }
      function show(i){
        index = i;
        slides.style.transform = `translateX(${-i * 100}%)`;
        dots.querySelectorAll('.dot').forEach((x,ii)=> x.classList.toggle('active', ii===i));
      }
      // autoplay
      let timer = setInterval(()=> show((index+1)%total), 5200);
      // pause on hover
      const carousel = document.getElementById('carousel');
      carousel.addEventListener('mouseenter', ()=> clearInterval(timer));
      carousel.addEventListener('mouseleave', ()=> timer = setInterval(()=> show((index+1)%total), 5200));
    })();

    // ====== Testimonials: simple keyboard scroll
    (function(){
      const track = document.getElementById('tTrack');
      track.addEventListener('keydown', (e)=> {
        if(e.key==='ArrowRight') track.scrollBy({left:260,behavior:'smooth'});
        if(e.key==='ArrowLeft') track.scrollBy({left:-260,behavior:'smooth'});
      });
    })();

    // ====== Contact form: improved UX + validation + fetch to contact.php
    async function handleSubmit(e){
      e.preventDefault();
      const f = document.getElementById('quoteForm');
      const data = new FormData(f);
      // basic client validation (phone rough)
      const phone = (data.get('phone')||'').trim();
      if(!/^\+?\d{8,15}$/.test(phone.replace(/[\s\-()]/g,''))){
        alert('Por favor informe um telefone/WhatsApp válido (números).');
        return false;
      }
      // show summary
      const summary = `Solicitação de: ${data.get('name')}\nServiço: ${data.get('service')}\nHorário: ${data.get('when') || 'flexível'}\nDescrição: ${ (data.get('details')||'').slice(0,140) }...`;
      if(!confirm('Confirme o envio:\n\n' + summary)) return false;

      // try send to contact.php (if present on server). Fallback: show message and suggest WhatsApp
      try{
        const res = await fetch('contact.php', {method:'POST', body: data});
        if(res.ok){
          const txt = await res.text();
          alert('Enviado com sucesso: ' + txt);
          f.reset();
          document.getElementById('summaryText').textContent = 'Solicitação enviada. Responderemos em até 24h.';
          return false;
        } else {
          throw new Error('Resposta inválida do servidor');
        }
      }catch(err){
        alert('Não foi possível enviar pelo formulário. Use o WhatsApp para envio imediato: +55 61 9298-3613');
        return false;
      }
    }

    // ====== Theme toggle (simple)
    (function(){
      const btn = document.getElementById('themeBtn');
      btn.addEventListener('click', ()=>{
        document.documentElement.classList.toggle('light');
        // For this design, invert variables by adding/removing a class (kept simple)
        if(document.documentElement.classList.contains('light')){
          document.documentElement.style.setProperty('--bg','#f8fafc');
          document.documentElement.style.setProperty('--surface','#ffffff');
          document.documentElement.style.setProperty('--card','#f7fbff');
          document.documentElement.style.setProperty('--text','#082032');
          document.documentElement.style.setProperty('--muted','rgba(2,6,23,0.5)');
        } else {
          // revert
          document.documentElement.style.removeProperty('--bg');
          document.documentElement.style.removeProperty('--surface');
          document.documentElement.style.removeProperty('--card');
          document.documentElement.style.removeProperty('--text');
          document.documentElement.style.removeProperty('--muted');
        }
      });
    })();

    // ====== Subtle parallax effect for hero background
    (function(){
      const hero = document.querySelector('.hero');
      if(!hero) return;
      window.addEventListener('scroll', ()=>{
        const y = window.scrollY;
        const bg = document.querySelector('.hero .hero-bg');
        if(bg) bg.style.transform = `translateY(${y * 0.06}px) scale(${1 + Math.min(y/8000, 0.02)})`;
      });
    })();

    // ====== Snow flurry (light) ======
    (function(){
      const holder = document.getElementById('snowHolder');
      const COUNT = 24;
      const w = window.innerWidth, h = window.innerHeight;
      function create(i){
        const el = document.createElement('div');
        el.className = 'flake';
        el.style.left = Math.random() * 100 + 'vw';
        const size = 8 + Math.random()*14;
        el.style.fontSize = size + 'px';
        el.style.opacity = (0.2 + Math.random()*0.8).toString();
        el.style.transform = `translateY(-10vh) rotate(${Math.random()*360}deg)`;
        el.innerText = '❄';
        // animation
        const dur = 6 + Math.random()*8;
        el.animate([
          { transform: `translateY(-10vh) translateX(0) rotate(0deg)`, opacity: el.style.opacity },
          { transform: `translateY(110vh) translateX(${(Math.random()-0.5)*30}vw) rotate(360deg)`, opacity: 0.05 }
        ], {duration: dur*1000, iterations: Infinity, delay: Math.random()*4000});
        holder.appendChild(el);
      }
      for(let i=0;i<COUNT;i++) create(i);
    })();

    // ====== Accessibility helpers ======
    (function(){
      // show focus ring for keyboard users
      window.addEventListener('keydown', (e)=> {
        if(e.key === 'Tab') document.body.classList.add('user-is-tabbing');
      });
      window.addEventListener('mousedown', ()=> document.body.classList.remove('user-is-tabbing'));
    })();

