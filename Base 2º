  <!-- ========== SNOW HOLDER ========== -->
  <div class="snow-holder" id="snowHolder" aria-hidden="true"></div>

  <!-- ========== SCRIPTS (completo e comentado) ========== -->
  <script>
    /* ====== 1) Year (auto) ====== */
    document.getElementById('year').textContent = new Date().getFullYear();

    /* ====== 2) HERO CAROUSEL: build dots, autoplay, manual control ======
       - slides element contains each .slide
       - dots created automatically
       - autoplay every 5.2s, pauses on hover
    */
    (function(){
      const slidesEl = document.getElementById('slides');
      const dotsContainer = document.getElementById('carouselDots');
      const slides = slidesEl.children;
      const total = slides.length;
      let index = 0;

      // create dot buttons with accessible labels
      for(let i=0;i<total;i++){
        const btn = document.createElement('button');
        btn.className = 'dot' + (i===0 ? ' active' : '');
        btn.type = 'button';
        btn.setAttribute('aria-label', 'Ir para slide ' + (i+1));
        btn.setAttribute('role','tab');
        btn.addEventListener('click', ()=> show(i));
        dotsContainer.appendChild(btn);
      }

      // show slide i
      function show(i){
        index = i;
        slidesEl.style.transform = `translateX(${-i * 100}%)`;
        // update active dot
        dotsContainer.querySelectorAll('.dot').forEach((d,ii)=> d.classList.toggle('active', ii===i));
      }

      // autoplay
      let timer = setInterval(()=> show((index+1)%total), 5200);
      const carousel = document.getElementById('carousel');
      // pause/resume on hover (desktop)
      carousel.addEventListener('mouseenter', ()=> clearInterval(timer));
      carousel.addEventListener('mouseleave', ()=> timer = setInterval(()=> show((index+1)%total), 5200));

      // allow keyboard control: left/right for carousel
      carousel.addEventListener('keydown', (e)=>{
        if(e.key === 'ArrowRight') show((index+1)%total);
        if(e.key === 'ArrowLeft') show((index-1+total)%total);
      });

      // ARIA: make carousel focusable
      carousel.tabIndex = 0;
    })();

    /* ====== 3) Testimonials keyboard scroll (left/right arrows) ======
       - tTrack is horizontally scrollable; arrows scroll 260px
    */
    (function(){
      const track = document.getElementById('tTrack');
      track.addEventListener('keydown', (e)=> {
        if(e.key === 'ArrowRight') track.scrollBy({left:260,behavior:'smooth'});
        if(e.key === 'ArrowLeft') track.scrollBy({left:-260,behavior:'smooth'});
      });
      // ensure keyboard users can tab into it
      track.tabIndex = 0;
    })();

    /* ====== 4) Contact form: validation, confirmation, POST to contact.php fallback ======
       - The form tries to POST to contact.php (server must host it).
       - If server not available, user is advised to use WhatsApp.
       - Input phone validation is permissive but checks digits length.
    */
    async function handleSubmit(event){
      event.preventDefault();
      const form = document.getElementById('quoteForm');
      const data = new FormData(form);

      // Basic client validation for phone (keeps only digits for check)
      const rawPhone = (data.get('phone') || '').toString();
      const digits = rawPhone.replace(/\D/g,'');
      if(digits.length < 8 || digits.length > 15){
        alert('Por favor informe um telefone/WhatsApp válido (apenas números). Ex: +5561999xxxxxx');
        return false;
      }

      // Build a short summary for confirmation
      const summary = `Nome: ${data.get('name')}\nTelefone: ${data.get('phone')}\nServiço: ${data.get('service')}\nHorario: ${data.get('when') || 'flexível'}\nDescrição: ${(data.get('details') || '').slice(0,140)}`;
      if(!confirm('Confirme o envio da solicitação:\n\n' + summary)) return false;

      // Try sending to contact.php (server-side). If contact.php is not present, fallback gracefully.
      try{
        const res = await fetch('contact.php', { method: 'POST', body: data });
        if(res.ok){
          const txt = await res.text();
          alert('Solicitação enviada com sucesso: ' + txt);
          form.reset();
          document.getElementById('summaryText').textContent = 'Solicitação enviada. Responderemos em até 24h.';
          return false;
        } else {
          throw new Error('Servidor retornou erro: ' + res.status);
        }
      } catch(err){
        // graceful fallback
        alert('Não foi possível enviar através do formulário (servidor indisponível). Use o WhatsApp para envio imediato: +55 61 9298-3613');
        return false;
      }
    }

    /* ====== 5) Theme toggle (light/dark) ======
       - Adds/removes a simple set of CSS variables for "light mode".
       - This approach avoids re-writing the whole stylesheet.
    */
    (function(){
      const btn = document.getElementById('themeBtn');
      btn.addEventListener('click', ()=>{
        const isLight = document.documentElement.classList.toggle('light');
        if(isLight){
          // set "light" variables
          document.documentElement.style.setProperty('--bg','#f8fafc');
          document.documentElement.style.setProperty('--surface','#ffffff');
          document.documentElement.style.setProperty('--card','#f7fbff');
          document.documentElement.style.setProperty('--text','#082032');
          document.documentElement.style.setProperty('--muted','rgba(2,6,23,0.45)');
        } else {
          // remove overrides => back to dark
          document.documentElement.style.removeProperty('--bg');
          document.documentElement.style.removeProperty('--surface');
          document.documentElement.style.removeProperty('--card');
          document.documentElement.style.removeProperty('--text');
          document.documentElement.style.removeProperty('--muted');
        }
      });
    })();

    /* ====== 6) Subtle parallax/scroll effect (hero) ====== */
    (function(){
      const hero = document.querySelector('.hero');
      if(!hero) return;
      window.addEventListener('scroll', ()=>{
        const y = window.scrollY;
        // If you later add .hero-bg element, you can animate it.
        // For now we apply subtle translate to hero-left to feel dynamic.
        const left = document.querySelector('.hero-left');
        if(left) left.style.transform = `translateY(${Math.min(y * 0.02, 12)}px)`;
      });
    })();

    /* ====== 7) Snow flurry: creates COUNT flakes and animates them (Web Animations API) ====== */
    (function(){
      const holder = document.getElementById('snowHolder');
      if(!holder) return;
      const COUNT = 20; // keep it low for performance
      const vw = Math.max(document.documentElement.clientWidth || 0, window.innerWidth || 0);
      for(let i=0;i<COUNT;i++){
        const el = document.createElement('div');
        el.className = 'flake';
        el.innerText = '❄'; // snow glyph
        // random horizontal start
        el.style.left = (Math.random() * 100) + 'vw';
        // random size
        const size = 8 + Math.random()*16;
        el.style.fontSize = size + 'px';
        // random opacity
        el.style.opacity = (0.2 + Math.random()*0.8).toString();
        holder.appendChild(el);
        // animate from -10vh to 110vh with slight horizontal drift
        const dur = 6000 + Math.random()*9000; // duration in ms
        const drift = (Math.random()-0.5) * 30; // vw drift
        el.animate([
          { transform: `translateY(-10vh) translateX(0) rotate(0deg)`, opacity: el.style.opacity },
          { transform: `translateY(110vh) translateX(${drift}vw) rotate(360deg)`, opacity: 0.05 }
        ], { duration: dur, iterations: Infinity, delay: Math.random()*4000 });
      }
    })();

    /* ====== 8) Accessibility helpers: focus outline for keyboard users ====== */
    (function(){
      window.addEventListener('keydown', (e)=> { if(e.key === 'Tab') document.body.classList.add('user-is-tabbing'); });
      window.addEventListener('mousedown', ()=> document.body.classList.remove('user-is-tabbing'));
      // CSS rules not included here, but 'user-is-tabbing' class can be used to show focus rings elsewhere
    })();

    /* ====== 9) Developer note: local video paths (COMMENTED) ======
       - If you want to enable local videos later, uncomment and use the paths below as <video src="...">
       - These paths came from your previous uploads / conversation history.
    */
    /*
    const localVideo1 = "/mnt/data/WhatsApp Video 2025-11-22 at 15.48.11.mp4";
    const localVideo2 = "/mnt/data/WhatsApp Video 2025-11-22 at 15.48.10.mp4";
    const localVideo3 = "/mnt/data/WhatsApp Video 2025-11-22 at 15.48.10 (1).mp4";
    // Example usage (do this on server that serves files):
    // <video controls src="/mnt/data/WhatsApp Video 2025-11-22 at 15.48.11.mp4"></video>
    */

  </script>
</body>
</html>
